//By ankitraturi44, contest: Codeforces Beta Round #84 (Div. 2 Only), problem: (A) Nearly Lucky Number, Accepted


#include<bits/stdc++.h>
using namespace std;
int main()
{

    ios::sync_with_stdio(0);
    cin.tie(0);
    long long int n;
    cin>>n;
    long long int c=0;
    while(n!=0)
    {
        if(n%10==4 || n%10==7)
        {
            c++;
        }
        n=n/10;
    }
    if(c==4 || c==7)
    {
        cout<<"YES\n";
    }
    else
    {
        cout<<"NO\n";
    }
    return 0;
}
