#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    int n,f,b;
    cin>>n>>f>>b;
    cout<<(n-max(f+1,n-b)+1);
    return 0;
}
